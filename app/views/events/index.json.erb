// Simile event stream format

<%= { 'dateTimeFormat' => 'iso8601',
              'events' => @top_events.map do |e| 
              { 'eventID'     => e.id.to_s, 
                'id'          => e.to_s,        
                'start'       => e.start,              
                'end'         => e.finish ? e.finish : nil,  
                'title'       => e.title || e.description.truncate(20), 
                'description' => e.description }           
              end 
    }.to_json %>